<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <LinearLayout
            android:layout_marginTop="38dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="28sp"
                android:textColor="@color/colorBlack"
                android:text="Masuk sebagai mahasiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:text="Masuk sebagai mahasiswa. Jika anda belum mempunyai akun, anda bisa mendaftar. Jika anda adalah dosen, anda bisa masuk sebagai dosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <com.google.android.material.textfield.TextInputLayout
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_email"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_password"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:text="Masuk"
                android:id="@+id/btn_login"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_height="wrap_content" />

    </LinearLayout>



    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/go_to_dosen"
            android:layout_gravity="bottom"
            android:text="Login sebagai dosen"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="wrap_content"/>

</RelativeLayout>