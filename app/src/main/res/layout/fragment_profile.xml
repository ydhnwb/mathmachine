<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_margin="16dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_marginTop="16dp"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="2dp"
            android:src="@drawable/ic_action_account"
            android:layout_gravity="center_horizontal"
            android:layout_height="64dp"/>

    <TextView
            android:textStyle="bold"
            android:id="@+id/tv_name"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Prieyudha Akadita S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_email"
            android:layout_gravity="center_horizontal"
            android:text="yudhanewbie@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="28dp"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:visibility="gone"
                    android:id="@+id/manage_exam"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="18sp"
                        android:text="Kelola soal ujian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:visibility="gone"
                    android:id="@+id/manage_students"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="18sp"
                        android:text="Kelola mahasiswa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>



            <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="18sp"
                        android:text="Pengaturan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/logout"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="18sp"
                        android:text="Logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>